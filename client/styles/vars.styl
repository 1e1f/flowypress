scopic-header-bg = rgb(0,33,38)
scopic-footer-bg = rgb(0,33,38)
scopic-darkside-bg = rgb(46,51,54)
scopic-lightside-bg = rgb(238,238,238)
scopic-lightside-h-color = rgb(46,51,54)
scopic-lightside-p-color = rgb(87,92,99)

chroma-header-bg = rgb(0,33,38)
chroma-footer-bg = rgb(0,33,38)
chroma-darkside-bg = rgb(46,51,54)
chroma-lightside-bg = rgb(238,238,238)
chroma-lightside-h-color = rgb(46,51,54)
chroma-lightside-p-color = rgb(87,92,99)

chroma-chrome = chroma-darkside-bg
chroma-bg = chroma-darkside-bg

// official colors, sampled from logo
cf-purple    = rgb(184, 0,   142)
cf-magenta   = rgb(255, 0,   133)
cf-red       = rgb(250, 0,   33)
cf-orange    = rgb(255, 185, 0)
cf-yellow    = rgb(252, 249, 0)
cf-green     = rgb(181, 224, 34)
cf-turquoise = rgb(0,   176, 188)
cf-cyan      = rgb(0,   173, 243)
cf-blue      = rgb(0,   128, 201)

cf-linear-gradient = linear-gradient(to right, cf-purple, cf-magenta, cf-red, cf-orange, cf-yellow, cf-green, cf-turquoise, cf-cyan, cf-blue)

logo-g0 = #a2b811
logo-g1 = #d2e841

sectionTop = 4rem
sectionBottom = 6rem
footerRow = 1.5rem

@font-face
  font-family 'brandon'
  src url("Brandon_reg.otf") format("opentype")

@font-face
  font-family 'gotham'
  src url("Gotham-Bold.ttf") format("truetype")

/// https://github.com/ericching/meteor-bootstrap-stylus/blob/master/bootstrap/variables.styl
$brand-success = cf-green
$brand-info = cf-cyan
$brand-warning = cf-yellow
$brand-danger = cf-red

$body-bg = chroma-darkside-bg
$link-color = $gray-lighter

$border-radius-base = 0
$border-radius-small = 0
$border-radius-large = 0

$dropdown-bg = chroma-footer-bg
$dropdown-link-color = $gray-lighter

$dropdown-link-hover-color = $gray-lighter
$dropdown-link-hover-bg = transparent

$input-color = $gray-lighter
$input-border = transparent
$input-bg = $gray-light
$input-border-focus = $gray-lighter

$well-bg = $gray-light

$navbar-default-bg = chroma-header-bg

$navbar-default-brand-color = $gray-lighter
$navbar-default-link-color = $gray-lighter
$navbar-default-link-hover-color = $gray-lighter
$navbar-default-link-active-color = $gray-lighter

$headings-small-color = $gray-lighter

$panel-bg = chroma-darkside-bg
$panel-body-padding = 0px

$panel-default-text = $gray-lighter
$panel-primary-text = $gray-lighter
$panel-success-text = $gray-lighter
$panel-info-text = $gray-lighter
$panel-warning-text = $gray-lighter
$panel-danger-text = $gray-lighter

$panel-default-heading-bg = chroma-darkside-bg
$panel-primary-heading-bg = chroma-darkside-bg
$panel-success-heading-bg = chroma-darkside-bg
$panel-info-heading-bg = chroma-darkside-bg
$panel-warning-heading-bg = chroma-darkside-bg
$panel-danger-heading-bg = chroma-darkside-bg

$popover-bg ?=                        chroma-darkside-bg
$popover-max-width ?=                 100vw
$popover-border-color ?=              rgba(0, 0, 0, .2)
$popover-fallback-border-color ?=     #777
$popover-title-bg ?=                  darken($popover-bg, 3)
$popover-arrow-width ?=               10px
$popover-arrow-color ?=               $popover-bg
$popover-arrow-outer-width ?=         ($popover-arrow-width + 1)
$popover-arrow-outer-color ?=         fade-in($popover-border-color, 5)
$popover-arrow-outer-fallback-color ?= darken($popover-fallback-border-color, 20)


$font-family-sans-serif = 'Raleway'
$text-color = $gray-lighter
$lightside-header-text-color = $chroma-h-font-color
$lightside-text-color = $chroma-p-font-color

$font-size-base = 14px
$navbar-height = 80px

// Extra small screen / phone
//** Deprecated `$screen-xs` as of v3.0.1
$screen-xs ?=                480px
//** Deprecated `$screen-xs-min` as of v3.2.0
$screen-xs-min ?=            $screen-xs
//** Deprecated `$screen-phone` as of v3.0.1
$screen-phone ?=             $screen-xs-min

// Small screen / tablet
//** Deprecated `$screen-sm` as of v3.0.1
$screen-sm ?=                768px
$screen-sm-min ?=            $screen-sm
//** Deprecated `$screen-tablet` as of v3.0.1
$screen-tablet ?=            $screen-sm-min

// Medium screen / desktop
//** Deprecated `$screen-md` as of v3.0.1
$screen-md ?=                992px
$screen-md-min ?=            $screen-md
//** Deprecated `$screen-desktop` as of v3.0.1
$screen-desktop ?=           $screen-md-min

// Large screen / wide desktop
//** Deprecated `$screen-lg` as of v3.0.1
$screen-lg ?=                1200px
$screen-lg-min ?=            $screen-lg
//** Deprecated `$screen-lg-desktop` as of v3.0.1
$screen-lg-desktop ?=        $screen-lg-min

// So media queries don't overlap when required, provide a maximum
$screen-xs-max ?=            ($screen-sm-min - 1)
$screen-sm-max ?=            ($screen-md-min - 1)
$screen-md-max ?=            ($screen-lg-min - 1)

$grid-float-breakpoint ?=     $screen-sm-min

$state-danger-bg  ?= darken($brand-danger, 30)
$state-warning-bg ?= darken($brand-warning, 30)
$state-success-bg ?= darken($brand-success, 30)

$state-danger-text  ?= lighten($brand-danger, 10)
$state-warning-text ?= lighten($brand-warning, 10)
$state-success-text ?= lighten($brand-success, 10)

$table-bg-accent = chroma-darkside-bg
$table-bg-hover = $gray-light

@require  '../../.meteor/local/build/programs/web.browser/packages/innovae_bootstrap-stylus/bootstrap/variables'

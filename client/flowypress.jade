head
  title
    flowBox

body
  +flowBox

template(name="flowBox")
  .flow-container
    each flows
      h1.flowTitle(contentEditable="true")
        |!{title}
      ul
        +flow(this)
      
template(name="flow")
  i.fa.fa-circle-o.flow-bullet
  li
    div.flowTitle(contentEditable="true")
      |!{title}
    if val
      .flowBox(contentEditable="true")
        |!{val}
  if children.count
    li
      ul
        each children
            +flow(this)
